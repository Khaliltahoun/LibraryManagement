<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.0">
    <persistence-unit name="LibraryPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.example.entities.Document</class>
        <class>com.example.entities.Book</class>
        <class>com.example.entities.Magazine</class>
        <class>com.example.entities.User</class>
        <class>com.example.entities.Borrow</class>
        <properties>
            <!-- Configuration MySQL -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/library_db"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="Khalil@2001"/>

            <!-- Mise à jour automatique du schéma -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>

            <!-- Activer les logs SQL (pour le debug) -->
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>
</persistence>
